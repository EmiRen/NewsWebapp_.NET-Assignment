@model News.Models.EmailFormModel

@{
    ViewBag.Title = "Send Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="VIP">
<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("SendEmail", "Email", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <h4>Hello! Admin :) &nbsp;&nbsp; Please send your Email here.</h4>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.HiddenFor(m => m.FromName, new { @class = "form-control" })
            @Html.DisplayFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <br />
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.HiddenFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.DisplayFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <br />
    /*<div class="form-group">
        @Html.LabelFor(m => m.ToEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.HiddenFor(m => m.ToEmail, new { @class = "form-control" })
            @Html.DisplayFor(m => m.ToEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ToEmail)
        </div>
    </div> */

    <div class="form-group">
        @Html.LabelFor(m => m.ToEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.ToEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ToEmail)
        </div>
    </div>
    <br /><br />
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, 2, 50,
               new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <br /><br /><br />
    <div class="form-group">
        @Html.LabelFor(m => m.Upload, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="upload">
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
    <br />
}

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

